<Window x:Class="EventProgress.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventProgress"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" Name="Pbar" Height="20" Foreground="LawnGreen" Background="OrangeRed"/>
        <TextBlock Grid.Row="0" Name="tb" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Height="20" Width="40" Click="Button_Click"/>
    </Grid>
</Window>
